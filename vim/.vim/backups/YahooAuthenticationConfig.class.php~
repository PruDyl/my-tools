<?php
/**
 * Configuration file of YahooAuthenticationConfig module's
 *
 * @packaged YahooAuthenticationConfig
 * @subpackaged config
 * @author Camille NERON <camille_neron@carpe-hora.com>
 **/
class YahooAuthenticationConfig 
{
  /**
   * registerImplementation
   *
   * @return void
   * @author Camille NERON <camille_neron@carpe-hora.com>
   **/
  public function initialize(sfContext $sfContext)
  {
  }

  /**
   * configure routes
   *
   * @return void
   * @author Camille NERON <camille_neron@carpe-hora.com>
   **/
  static public function prependRoutes($routing)
  {
    $routing->prependRoute(
              'signup_yahoo_verify', 
              new sfRoute(
                '/register/yahoo/verify', 
                array('module' => 'YahooAuthentication', 'action' => 'verify')));

    $routing->prependRoute(
              'signup_yahoo_show_result',
              new sfRequestRoute(
                '/register/yahoo/show-result',
                array('module' => 'chCmsFrontendSignup', 'action' => 'showResult'),
                array('sf_method' => array('get'))));

    $routing->prependRoute(
              'signup_yahoo_url', 
              new sfRoute(
                '/register/with/yahoo', 
                array('module' => 'YahooAuthentication', 'action' => 'redirect')));

  }
} // END class YahooAuthenticationConfig
