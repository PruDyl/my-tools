<?php
class GoogleRegistrationForm extends BaseGoogleRegistrationForm
{
  /**
   * Configures the form
   *
   * @return void
   * @author Kevin Gomez <contact@kevingomez.fr>
   **/
  public function configure()
  {
    parent::configure();

    // we delete two unused fields (passwords)
    $this->useFields(array(
      'username', 'firstname', 'lastname','mail'/* 'birthday', 'phone', 'mobile', 'mail',
      'address_1', 'address_2', 'address_3', 'zip_code', 'town'*/
    ));

    $this->validatorSchema['mail']->setOption('required', false);
  }
}
