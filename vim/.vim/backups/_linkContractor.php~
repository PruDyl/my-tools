      <?php if ($contractor->getUserId()): ?>
            <p class="button-spacer">
            <?php if ($contractor->getUserId() != $sf_user->getId()): ?>

              <?php echo __('%Contractor% lié au compte utilisateur <b>%username%</b>', array(
                            '%Contractor%' => ucfirst(vocabulary('contractor')),
                            '%username%' => $contractor->getUser()->getUsername())) ?>

              <?php if (!$contractor->isNew()): ?>
                <?php echo jui_link_to_function('Supprimer le lien', 
                                          'Tresa.Contractors.removeLinkToUser(this);', array(
                                            'icon' => 'silk-link_break',
                                            'href' => admin_url_for($group, 'contractor_unbind', array(
                                                          'id' => $contractor->getId()))
                                          )) ?>
              <?php else: 
                /*
                    this requires the lookup form to be given and bound
                    as this is the link on a newly created user.
                    The trick is to add the lookup form components here
                */
                
              ?>
                <?php echo jui_link_to_function('Supprimer le lien', 
                                          'Tresa.Contractors.removeLinkToUser(this);', array(
                                            'icon' => 'silk-link_break',
                                            'href' => admin_url_for($group, 'contractor_reset_populate_user', array())
                                          )) ?>
                <?php echo $lookup_form->renderHiddenFields() ?>
              <?php endif; ?>

            <?php else: ?>
              <?php jui_include_info_box(
                          'Ce %contractor% est votre représentation dans %company_name%<br />
                           Vous ne pouvez pas supprimer ce lien, vous n\'auriez plus accès à l\'application.', array(
                                  '%contractor%' => vocabulary('contractor'),
                                  '%company_name%' => $sf_user->getSelectedCompany()->getName())) ?>
            <?php endif; ?>
            </p>
      <?php else: ?>
            <p class="button-spacer">
              <?php echo jui_link_to_function('Lier à un compte utilisateur', 
                                          'Tresa.Contractors.showLinkToUserDialog(this);', array(
                                            'icon' => 'silk-link_add',
                                          )) ?>
               <?php echo $form; ?>
            </p>
      <?php endif; ?>
<?php 
// vim:ft=php.html.sftemplate
?>
