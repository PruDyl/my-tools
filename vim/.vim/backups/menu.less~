// some functions

.5stepGradients(@stop2:50%, @stop3:100%, @stop4:100%, @color3:#fff){
  @color1: lighten(@color3, 30%);
  @color2: lighten(@color3, 10%);
  @color4: darken(@color3, 7%);
  @color5: darken(@color3, 15%);

  background-color: @color3;
  background: -webkit-gradient(linear, left top, left bottom, from(@color1), color-stop(@stop2, @color2),color-stop(@stop3, @color3), color-stop(@stop4, @color4), to(@color5));
  background:-moz-linear-gradient(top, @color1, @color2 @stop2, @color3 @stop3, @color4 @stop4, @color5);
  background:-ms-linear-gradient(top, @color1, @color2 @stop2, @color3 @stop3, @color4 @stop4, @color5);
  background:-o-linear-gradient(top, @color1, @color2 @stop2, @color3 @stop3, @color4 @stop4, @color5);
  background:linear-gradient(top, @color1, @color2 @stop2, @color3 @stop3, @color4 @stop4, @color5);
  -pie-background:  linear-gradient(@color5, @color3, @color2);
  filter: e(%("progid:DXImageTransform.Microsoft.gradient(GradientType=0,startColorstr=%d,endColorstr=%d)", @color1, @color5));
  -ms-filter: e(%('"progid:DXImageTransform.Microsoft.gradient(GradientType=0,startColorstr=%d,endColorstr=%d)"', @color1, @color5));
}

.3stepGradients(@stop1:0, @color1:#ccc, @stop2:50%, @color2:#ddd, @stop3:100%, @color3:#ccc){
  background-color:@color2;
  background:-webkit-gradient(linear, left top, left bottom, color-stop(@stop1, @color1), color-stop(@stop2, @color2), to(@stop3, @color3));
  background:-moz-linear-gradient(top, @color1 @stop1, @color2 @stop2, @color3 @stop3);
  background:-ms-linear-gradient(top, @color1 @stop1, @color2 @stop2, @color3 @stop3);
  background:-o-linear-gradient(top, @color1 @stop1, @color2 @stop2, @color3 @stop3);
  background:linear-gradient(top, @color1 @stop1, @color2 @stop2, @color3 @stop3);
  -pie-background: linear-gradient(@color3, @color2, @color1);
  filter: e(%("progid:DXImageTransform.Microsoft.gradient(GradientType=0,startColorstr=%d,endColorstr=%d)", @color1, @color3));
  -ms-filter: e(%('"progid:DXImageTransform.Microsoft.gradient(GradientType=0,startColorstr=%d,endColorstr=%d)"', @color1, @color3));
}


