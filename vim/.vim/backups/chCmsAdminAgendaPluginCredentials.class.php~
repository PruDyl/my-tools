/**
 * Class with no description
 */
class chCmsAdminAgendaPluginCredentials
{
  /**
   * listen to the Amdin menu init event
   *
   * @return void
   **/
  public static function listenToAdminMenuInitEvent($event)
  {
    $menu = $event->getSubject();
    $company = $event->getUser()->getSelectedCompany();
    $menu->addCredential(
                    "admin_edit_service", 
                    "Edition des prestations et horaires d'ouverture", 
                    strtr("Donne accès aux prestations que propose l'entreprise ainsi qu'à ses horaires d'ouverture.\n".
                          "Les %contractors%  peuvent ainsi modifier les différents type de prestations fournies par l'entreprise.",array(
                            "%contractors%" => $company->getVocabulary("contractor", 2))),
                    "Agenda");
  }
} // END OF chCmsAdminAgendaPluginCredentials
