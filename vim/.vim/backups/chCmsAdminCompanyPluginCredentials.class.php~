/**
 * Class with no description
 */
class chCmsAdminCompanyPluginCredentials
{
  
  /**
   * listen to the Amdin menu init event
   *
   * @return void
   **/
  public static function listenToAdminMenuInitEvent($event)
  {
    $menu = $event->getSubject();
    $company = $event["user"]->getSelectedCompany();
    $menu->addCredential(
                    "admin_edit_vocabulary", 
                    "Edition du vocabulaire de l'entreprise", 
                    strtr("Donne accès au vocabulaire de l'entreprise.\n".
                          "Les %contractors%  peuvent ainsi modifier la terminologie employée dans l'entreprise.",array(
                            "%contractors%" => $company->getVocabulary("contractor", 2))),
                    "Entreprise");
    $menu->addCredential(
                    "admin_edit_contacts", 
                    "Edition de la visibilité par défaut de tous les répertoire de l'entreprise", 
                    strtr("Donne accès à la visibilité par defaut des repertoires de l'entreprise.\n".
                          "Les %contractors%  peuvent ainsi modifier la visibilité par defaut des repertoires de l'entreprise.\n",array(
                            "%contractors%" => $company->getVocabulary("contractor", 2))),
                    "Entreprise");
  }
} // END OF chCmsAdminCompanyPluginCredentials
