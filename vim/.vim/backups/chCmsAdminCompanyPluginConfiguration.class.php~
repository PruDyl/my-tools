<?php

/**
 * chCmsAdminCompanyPlugin configuration.
 * 
 * @package     chCmsAdminCompanyPlugin
 * @subpackage  config
 * @author      Julien Muetton <julien_muetton@carpe-hora.com>
 * @version     SVN: $Id$
 */
class chCmsAdminCompanyPluginConfiguration extends sfPluginConfiguration
{
  const VERSION = '1.0.0-DEV';

  /**
   * @see sfPluginConfiguration
   */
  public function initialize()
  {
    $this->dispatcher->connect(
          AdminMenu::getEventName(), 
          array('chCmsAdminCompanyPluginCredentials', 'listenToAdminMenuInitEvent'));

    if (!sfConfig::get('sf_app_ch_cms_admin_company_plugin_prevent_admin_registration', false))
    {
      $this->dispatcher->connect(
          AdminMenu::getEventName(), 
          array('chCmsAdminCompanyPluginRouting', 'listenToAdminMenuInitEvent'));
    }
  }

  /**
   * return the autocomplete url for lookup form
   *
   * @return string
   **/
  public static function getLookupForUserAcUrl()
  {
    AdminMenu::getInstance()->getGroup($group)->generateUrl('lookup_for_user');
  }
}
