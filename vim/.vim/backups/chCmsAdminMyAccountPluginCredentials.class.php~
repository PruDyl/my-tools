/**
 * define the credentials for chCmsAdminMyAccountPlugin
 */
class chCmsAdminMyAccountPluginCredentials
{
  /**
   * listen to the Amdin menu init event
   *
   * @return void
   **/
  public static function listenToAdminMenuInitEvent($event)
  {
    $menu = $event->getSubject();
    $company = $event['user']->getSelectedCompany();
  }
} // END OF chCmsAdminMyAccountPluginCredentials
