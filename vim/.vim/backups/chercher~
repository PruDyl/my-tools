#!/bin/bash
###########################
# include dependancies
##########################
SCRIPTPATH=`readlink -f $0`;DIR=`dirname $SCRIPTPATH`;
. "$DIR/../lib/admin.sh.inc"
CHA_BASEDIR=`cha_basedir $0`

if [ -z $1 ]; then
 echo "Recherche vide!";
 exit;
else if [ -z $2 ]; then
        SEARCHED=$1;
        OPTIONS='-r';
      else
        OPTIONS=$1;
        SEARCHED=$2;
      fi
fi
  ack-grep $OPTIONS "$SEARCHED" $TRESA_HOME;
