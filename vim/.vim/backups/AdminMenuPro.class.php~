class AdminMenuPro
{
  /**
   * the callback registered on the admin menu init event
   *
   * @param sfEvent $sfEvent the init admin menu event
   *
   * @return void
   * @author Julien Muetton <julien_muetton@carpe-hora.com>
   *
   * @see proConfiguration
   **/
  public static function listenToAdminMenuEvent($sfEvent)
  {
    sfContext::getInstance()->getLogger()->info('initializes the admin menu ("AdminMenuPro::listenToAdminMenuEvent") and if admin, register admin credentials');
    
    self::registerMyAccountMenu($sfEvent);
    self::registerAgendaMenu($sfEvent);
    self::registerContractorMenu($sfEvent);
    self::registerCompanyMenu($sfEvent);
    self::registerTresaMenu($sfEvent);
  }

