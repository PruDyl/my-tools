 * @copyright (c) Carpe Hora SARL 2011
 * @since 2011-06-29
 */

/**
 * the base plugin response extension
 */
class chCmsBasePluginResponse
{
  /**
   * called on response.method_not_found event
   *
   * @return void
   * @author Ludovic Pellé <ludovic_pelle@carpe-hora.com>
   **/
  public static function methodNotFound(sfEvent $event)
  {
    if (method_exists('chCmsBasePluginResponse', $event['method']))
    {
      $event->setReturnValue(call_user_func_array(
        array('chCmsBasePluginResponse', $event['method']),
        array_merge(array($event->getSubject()), $event['arguments'])
      ));
      return true;
    }
  }
} // END OF chCmsBasePluginResponse
