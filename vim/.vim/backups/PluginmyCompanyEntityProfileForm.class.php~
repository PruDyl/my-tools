/**
 * the plugin implementation of CompanyEntityProfileForm
 */
class PluginmyCompanyEntityProfileForm extends CompanyEntityForm
{
  /**
   * configure the myProfileForm
   *
   * @return void
   * @author Julien Muetton <julien_muetton@carpe-hora.com>
   **/
  public function configure()
  {
    parent::configure();
    unset(
      $this['id'],
      $this['entity_type'],
      $this['contacts_default_visibility'],
    );

    $this->widgetSchema->setNameFormat('pro_profile[%s]');
  }
} // END OF PluginmyCompanyEntityProfileForm
