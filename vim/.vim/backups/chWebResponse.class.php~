/**
 * extend sfWebResponse for add dynamic method
 */
class chWebResponse extends sfWebResponse
{

  public static function methodNotFound(sfEvent $event)
  {
    if (method_exists('chWebResponse', $event['method']))
    {
      $event->setReturnValue(call_user_func_array(
        array('chWebResponse', $event['method']),
        array_merge(array($event->getSubject()), $event['arguments'])
      ));
      return true;
    }
  }

} // END OF chWebResponse
